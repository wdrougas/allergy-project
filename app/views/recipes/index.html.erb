<h1>Recipes#index</h1>
<p>Find me in app/views/recipes/index.html.erb</p>

<%= form_tag recipes_path, :method => 'get' do %>
<%= text_field_tag :search %>
<%= submit_tag "Search" %>
<% end %>

<ul>
  <%@recipes_list.each do |recipe| %>
    <li><%= link_to recipe.name, recipe_path(recipe) %></li>
  <% end %>
</ul>
<div>
  <%= @recipes.name %>
</div>
